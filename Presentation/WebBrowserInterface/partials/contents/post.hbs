<div class="main text-light">

    <h2 class="text-center" style="margin-top: 40px;margin-bottom: 40px; ">BÀI VIẾT KHOA HỌC</h2>

    <div class="container">
        <hr>
        <div class="text-center">
            <h3>{{post.TIEUDE}}</h3>
        </div>
        <!-- Hình ảnh và nội dung -->
        <div style="display: flex; justify-content: space-between;">
            <img class="img" src="{{post.ANHDINHKEM}}" style="width: 45%; margin-right: 20px;" />
            <div>

                <h4>
                    {{!-- {{post.NOIDUNG}} --}}
                    {{#each post.PARAGRAPH}}
                    <h4> {{this.text}}</h4>
                    {{/each}}
                </h4>
                <p class="content" style="font-size: small;">Ngày đăng: {{post.NGAYDANG}}</p>
                <p class="author" style="font-size: small;">Người đăng: {{post.TENNGUOIDANG}}</p>
            </div>
        </div>
        {{#if isMyPost}}
        <div class="text-end">
            <a href="/business/update_post-{{post.ID}}" class="btn btn-success">Sửa</a>
        </div>
        {{/if}}
        {{#if isPermission}}
            {{#if chuaDuyet}}
            <div class="d-flex justify-content-end">

                <div class="text-center">
                    <a href="/business/update_post2-{{post.ID}}" class="btn btn-success">Sửa</a>
                </div>
                
                <form action="approve_post" method="get">
                    <input type="hidden" name="id" value="{{post.ID}}">
                    <button type="submit" class="btn btn-success ">Duyệt bài</button>
                </form>
                <form action="deny_post" method="get" style="float: right" >
                                        <input type="hidden" name="id" value="{{post.ID}}">
                                        <button type="submit" class = "btn btn-danger">Từ chối</button>
                                    </form>
                                    <form action="delete_post" method="get" style="float: right"
                    onsubmit="return confirm('Bạn thực sự muốn xoá bài viết này?');">
                    <input type="hidden" name="id" value="{{post.ID}}">
                    <button type="submit" class="btn btn-danger">XOÁ</button>
                </form>
            </div>

            {{else}}
            <div class="d-flex justify-content-end">
                <div class="text-center">
                    <a href="/business/update_post2-{{post.ID}}" class="btn btn-success">Sửa</a>
                </div>
                <form action="delete_post" method="get" style="float: right"
                    onsubmit="return confirm('Bạn thực sự muốn xoá bài viết này?');">
                    <input type="hidden" name="id" value="{{post.ID}}">
                    <button type="submit" class="btn btn-danger">XOÁ</button>
                </form>
            </div>


            {{/if}}

        {{/if}}
