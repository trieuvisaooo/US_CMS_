<div class="main">
        <div class="row">


            <div class="col-9">
                <div class="row" style="background-color: #232D3F;
                                        border-radius: 25px;">
                    <div class="col">
                        <form action="/business/manage_member" method="get">
                            <div class="btn-group me-2  " role="group" style="width: 100%;display: flex;
                            justify-content: center;
                            align-items: center;" aria-label=" group">
                                <button type="submit" style=" border-radius: 25px; background-color: #008170"
                                        class="btn text-center btnPhongBan text-light fw-bold {{#if active_all}}bg-light text-dark{{/if}}">
                                    Tất cả
                                </button>
                            </div>
                        </form>
                    </div>
                    <div class="col">
                        <form action="/business/banTruyenThong" method="get">
                            <div class="btn-group me-2  " role="group" style="width: 100%;display: flex;
                            justify-content: center;
                            align-items: center;" aria-label=" group">
                                <button type="submit" style=" border-radius: 25px; background-color: #008170"
                                        class="btn text-center btnPhongBan text-light fw-bold {{#if active_first}}bg-light text-dark{{/if}}">
                                    Ban Truyền thông
                                </button>
                            </div>
                        </form>
                    </div>

                    <div class="col">
                        <form action="/business/banNoiDung" method="get">
                            <div class="btn-group me-2  " role="group" style="width: 100%;display: flex;
                            justify-content: center;
                            align-items: center;" aria-label=" group">
                                <button type="submit" style=" border-radius: 25px; background-color: #008170"
                                        class="btn text-center btnPhongBan text-light fw-bold {{#if active_second}}bg-light text-dark{{/if}}">
                                    Ban Nội dung
                                </button>
                            </div>
                        </form>
                    </div>
                    <div class="col">
                        <form action="/business/banHauCan" method="get">
                            <div class="btn-group me-2  " role="group" style="width: 100%;display: flex;
                            justify-content: center;
                            align-items: center;" aria-label=" group">
                                <button type="submit" style=" border-radius: 25px; background-color: #008170"
                                        class="btn text-center btnPhongBan text-light fw-bold {{#if active_third}}bg-light text-dark{{/if}}">
                                    Ban Hậu cần
                                </button>
                            </div>
                        </form>
                    </div>
                    <div class="col">
                        <form action="/business/banSuKien" method="get">
                            <div class="btn-group me-2  " role="group" style="width: 100%;display: flex;
                            justify-content: center;
                            align-items: center;" aria-label=" group">
                                <button type="submit" style=" border-radius: 25px; background-color: #008170"
                                        class="btn text-center btnPhongBan fw-bold text-light {{#if active_fourth}}bg-light text-dark{{/if}}">
                                    Ban Sự kiện
                                </button>
                            </div>
                        </form>
                    </div>

                </div>
            </div>
            <div class="col-1" >
                <button type="button" style="background-color: #008170;
                                                color:black;
                                                width: 50px;
                                                height: 40px;
                                                margin: 2em 8em;
                                                " class="btn rounded-pill text-light fw-bold " data-bs-toggle="modal" data-bs-target="#exampleModal">

                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-fill-add" viewBox="0 0 16 16">
                        <path d="M12.5 16a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7m.5-5v1h1a.5.5 0 0 1 0 1h-1v1a.5.5 0 0 1-1 0v-1h-1a.5.5 0 0 1 0-1h1v-1a.5.5 0 0 1 1 0m-2-6a3 3 0 1 1-6 0 3 3 0 0 1 6 0"/>
