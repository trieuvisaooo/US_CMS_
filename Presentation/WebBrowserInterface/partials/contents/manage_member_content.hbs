                    </svg>

                </button>
            </div>
            <!-- Modal -->
            <form action="/business/add_user" method="post">
                <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title fw-bold" id="exampleModalLabel">THÊM THÀNH VIÊN</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <div class="row w-100">
                                    <div class="col">
                                        <input required minlength="8" maxlength="8" type="text" class="form-control" placeholder="MSSV - 8 ký tự" name="new_user_id">
                                    </div>
                                    <div class="col">
                                        <input required minlength="4" maxlength="4" type="text" class="form-control" placeholder="Mã giới thiệu - 4 ký tự" name="referral_code" >
                                    </div>
                                </div>
                                <div class="row w-100">
                                    <a type="button" class="btn rounded-pill text-light ms-2" data-bs-toggle="collapse" data-bs-target="#demo" style="background: #008170">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye-fill me-1" viewBox="0 0 16 16">
                                            <path d="M10.5 8a2.5 2.5 0 1 1-5 0 2.5 2.5 0 0 1 5 0"/>
                                            <path d="M0 8s3-5.5 8-5.5S16 8 16 8s-3 5.5-8 5.5S0 8 0 8m8 3.5a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7"/>
                                        </svg>
                                        XEM
                                    </a>
                                    <div id="demo" class="collapse">
                                        <div class="text-center mt-2">
                                            <table class="table">
                                                <thead>
                                                <tr>
                                                    <th scope="col">#</th>
                                                    <th scope="col">MSSV</th>
                                                    <th scope="col">MÃ GIỚI THIỆU</th>
                                                </tr>
                                                </thead>
                                                <tbody>

                                                {{#if refs }}

                                                    {{#each refs}}
                                                        <tr>
                                                            <th scope="row">{{@index}}</th>
                                                            <td>{{this.MSSV}}</td>
                                                            <td>{{this.MAGIOITHIEU}}</td>
                                                        </tr>
                                                    {{/each}}
                                                {{/if}}
                                                </tbody>
                                            </table>
                                        </div>

                                    </div>

                                </div>
                            </div>
                            <div class="modal-footer">
                                <div class="w-50 d-flex justify-content-end">
                                <button type="button" class="btn btn-secondary rounded-pill me-2 w-25" data-bs-dismiss="modal">ĐÓNG</button>
                                <button type="submit" class="btn text-light rounded-pill w-25" style="background: #008170">THÊM</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
