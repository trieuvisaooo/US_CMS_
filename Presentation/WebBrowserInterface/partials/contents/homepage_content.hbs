    <!--Bài viết yêu thích -->
    <div class="favourite-posts">
        <h2 class="text-center">BÀI VIẾT YÊU THÍCH</h2>
            <div id="carouselExample" class="carousel slide">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-1"></div>
                            <div class="col-10">
                                <div class="container-fluid">
                                    <div class="row">
                                        {{#each top3Post}}
                                        <div class="col" onclick="window.location.href ='application/viewpost?id={{this.ID}}'">

                                            <div class="card" style="height: 300px;">
                                                <div style="height: 200px;">
                                                    <img src="{{this.ANHDINHKEM}}" class="card-img-top" alt="..."
                                                        style="height: 200px;">
                                                </div>
                                                <div class="card-body">
                                                    <h5 class="card-title">{{this.TIEUDE}}</h5>
                                                    <div class="card-text">
                                                        {{this.NOIDUNG}}
                                                    </div>

                                                </div>
                                            </div>
                                        </div>
                                        {{/each}}
                                    </div>
