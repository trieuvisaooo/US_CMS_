
<!--main-->
<div class="main">
    <!--Giới thiệu clb-->
    <div class="container-fluid" style="margin-top: 20px; ">
        <div class="container-fluid text-center" style="height: max-content;">
            <!-- Stack the columns on mobile by making one full-width and the other half-width -->
            <div class="row">
                <div class="col-6 col-md-6 club-infor" style="margin-top: 5%;">
                    <h3>US-CMS</h3>
                    <q>Science is simply the word we use to describe a method of organizing our curiosity</q>
                    
                </div>
                <div class="col-md-6">
                    <img src="/resources/img/thumbnail_post2.png" style="width: 100%" />
                </div>
            </div>
        </div>
    </div>

    <div class="popular-activities">
        <!-- Hoạt động nổi bật -->
        <h2 class="text-center">HOẠT ĐỘNG NỔI BẬT</h2>
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" style="height: 420px;">
            <div class="carousel-inner">
                {{#each activities}}
                {{#if this.current}}
                <div class="carousel-item active" onclick="window.location.href='/application/viewactivity?id={{this.value.ID}}'">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-1"></div>
                            <div class="col-6"><img class="d-block w-100" style="height:400px;width: 500px;"
                                    src="{{this.value.ANHDINHKEM}}" alt="First slide"></div>
                            <div class="col-4">
                                <p class="text-center"><b>{{this.value.TIEUDE}} </b></p>
                                <p>{{this.value.NOIDUNG}}</p>

                            </div>
                            <div class="col-1"></div>
                        </div>
                    </div>
                </div>
                {{else}}
                <div class="carousel-item" onclick="window.location.href='/application/viewactivity?id={{this.value.ID}}'"> 
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-1"></div>
                            <div class="col-6"><img class="d-block w-100" style="height:400px;width: 500px;"
                                    src="{{this.value.ANHDINHKEM}}" alt="First slide"></div>
                            <div class="col-4">
                                <p class="text-center"><b>{{this.value.TIEUDE}} </b></p>
                                <p>{{this.value.NOIDUNG}}</p>

                            </div>
                            <div class="col-1"></div>
                        </div>
                    </div>
                </div>
                {{/if}}
                {{/each}}
            </div>

