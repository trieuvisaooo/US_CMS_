        function confirmAndRedirect(MSSV) {
            // Display a confirmation dialog
            const userConfirmed = confirm(`Bạn có thật sự muốn xoá ${MSSV}?`);

            // Check user's response
            if (userConfirmed) {
                // If the user clicks "OK," redirect to another link
                window.location.href = "/business/" + MSSV; // Replace with your desired URL
            } else {
                // If the user clicks "Cancel," do nothing or provide an alternative action
                console.log("User canceled");
            }
        }
    </script>
