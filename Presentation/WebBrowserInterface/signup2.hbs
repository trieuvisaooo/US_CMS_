{{> headers/homepage_header}}
<div class="create-pass-main">
    <div class="create-pass-text">
        <h3>Đăng kí tài khoản thành công
            <br>Vui lòng tạo mật khẩu để đăng nhập vào hệ thống</h3>
    </div>
    <div class="create-pass-form">
        <form method="post" action="confirm_psw">

            {{#if invalid_retype}}
                <p class="bg-danger rounded text-white text-center">
                    Mật khẩu xác nhận không trùng khớp. Vui lòng thử lại
                </p>
            {{/if}}

            <div class="txt_field">
                <input type="password" name="password" required>
                <span></span>
                <label>Nhập mật khẩu</label>
            </div>
            <div class="txt_field">
                <input type="password" name="retype_password" required>
                <span></span>
                <label>Nhập lại mật khẩu</label>
            </div>
            <input class="sign-up-btn" type="submit" name="submit" value="Gửi">
        </form>
    </div>
</div>
