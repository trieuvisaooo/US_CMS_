    {{> headers/homepage_header}}
    <div class="sign-up-main">
       <div class="sign-up-text">
            <h3>Nhập mã số sinh viên và mã giới thiệu <br> để đăng kí tài khoản</h3>
        </div>
        <div class="sign-up-form">
            <form method="post" action="referralChecking">
                {{#if existedUser}}
                    <p class="bg-danger rounded text-white text-center" >
                        Người dùng `{{student_id}}` đã tồn tại. Vui lòng thử lại
                    </p>
                {{/if}}

                {{#if invalidCode}}
                    <p class="bg-danger rounded text-white text-center" >
                        Mã giới thiệu không hợp lệ. Vui lòng thử lại
                    </p>
                {{/if}}
                <div class="txt_field">
                    <input type="text" name="student_id" required minlength="8" maxlength="8">
                    <span></span>
                    <label>MSSV</label>
                </div>
                <div class="txt_field">
                    <input type="text" name="referral_code" required minlength="4" maxlength="4">
                    <span></span>
                    <label>Mã giới thiệu (4 ký tự)</label>
                </div>
                <input class="sign-up-btn" type="submit" name="submit" value="Đăng kí">
            </form>
        </div>
    </div>

